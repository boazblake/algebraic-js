{
  "extends": ["recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "*.config.js",
    "*.config.cjs",
    "*.config.mjs"
  ]
}
