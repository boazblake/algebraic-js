{
  "name": "effects-vdom",
  "version": "0.3.0",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./core/*": "./dist/core/*.js",
    "./adt/*": "./dist/adt/*.js",
    "./nativescript/*": "./dist/nativescript/*.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "dev": "esbuild src/index.ts --bundle --servedir=public --outfile=public/app.js --sourcemap",
    "serve": "serve public",
    "lint": "oxlint . && eslint . --ext .ts,.js",
    "lint:fix": "oxlint --fix . && eslint --fix . --ext .ts,.js",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.21.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "oxlint": "^1.16.0",
    "typescript": "^5.4.0"
  }
}
